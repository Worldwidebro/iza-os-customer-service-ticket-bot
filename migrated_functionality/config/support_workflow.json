{
  "name": "IZA OS Support Automation",
  "trigger": {
    "type": "gmail_new_email",
    "filter": "to:support@your-domain.com"
  },
  "actions": [
    {
      "type": "openai_generate_text",
      "config": {
        "prompt": "Analyze this support request and provide a helpful response: {{email.body}}",
        "model": "gpt-3.5-turbo"
      }
    },
    {
      "type": "slack_post_message",
      "config": {
        "channel": "#support",
        "text": "New support request from {{email.from}}: {{email.subject}}"
      }
    },
    {
      "type": "freshdesk_create_ticket",
      "config": {
        "subject": "{{email.subject}}",
        "description": "{{email.body}}",
        "email": "{{email.from}}"
      }
    }
  ]
}
